---
// Import components from the template
import BaseLayout from '@firecow/template/src/layouts/BaseLayout.astro';
import Header from '@firecow/template/src/components/Header.astro';
import Footer from '@firecow/template/src/components/Footer.astro';
import HeroSection from '@firecow/template/src/components/HeroSection.astro';
import TrustBanner from '@firecow/template/src/components/TrustBanner.astro';
import ExperiencesGrid from '@firecow/template/src/components/ExperiencesGrid.astro';
import Testimonials from '@firecow/template/src/components/Testimonials.astro';
import ContactSection from '@firecow/template/src/components/ContactSection.astro';

const pageTitle = "Catamaran Sunset | FireCow";
---

<BaseLayout title={pageTitle}>
  <Header />
  
  <main>
    <HeroSection 
      title="Catamaran Sunset Cruise" 
      subtitle="The most exclusive way to see the sunset."
    />
    <TrustBanner />
    <ExperiencesGrid />
    <Testimonials />
    <ContactSection />
  </main>

  <Footer />
</BaseLayout>
