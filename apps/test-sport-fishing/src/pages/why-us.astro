---
import BaseLayout from '../layouts/BaseLayout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import WhyLocation from '../components/WhyLocation.astro';
import WhatsIncluded from '../components/WhatsIncluded.astro';
import TourTypes from '../components/TourTypes.astro';
import FAQSection from '../components/FAQSection.astro';
import { CalendarCheck, MessageSquare, Star, ArrowDown } from 'lucide-react';

const pageTitle = "Why Choose Us | Galapagos Island Cruise";
---

<BaseLayout title={pageTitle}>
  <Header />
  
  <main>
    <!-- Custom Hero Section for Why Us -->
    <section class="relative pt-32 pb-20 bg-gradient-to-br from-blue-50 to-blue-100/50">
      <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 text-center">
        <div class="inline-block bg-primary px-4 py-1.5 rounded-full text-sm font-bold tracking-wide uppercase mb-6 text-white shadow-lg shadow-blue-500/30">
          Your Adventure Starts Here
        </div>
        <h1 class="text-4xl md:text-6xl font-heading font-extrabold text-slate-900 mb-6 leading-tight">
          Why Choose Our <span class="text-primary">Galapagos Tours?</span>
        </h1>
        <p class="text-xl text-slate-600 max-w-3xl mx-auto mb-10 leading-relaxed">
          Over 20 years of expertise, 1,200+ happy travelers, and unmatched service quality make us the premier choice for your Galapagos adventure.
        </p>
        <div class="flex flex-col sm:flex-row justify-center gap-4">
          <a href="#why-location" class="inline-flex items-center justify-center px-8 py-4 bg-primary text-white rounded-xl font-bold shadow-lg shadow-blue-500/25 hover:bg-primary-600 transition hover:-translate-y-1">
            <ArrowDown className="w-5 h-5 mr-2" /> Learn More
          </a>
          <a href="/#book" class="inline-flex items-center justify-center px-8 py-4 bg-white text-primary border-2 border-primary/10 rounded-xl font-bold hover:bg-blue-50 transition hover:-translate-y-1">
            <CalendarCheck className="w-5 h-5 mr-2" /> Book Now
          </a>
        </div>
      </div>
    </section>

    <!-- Main Content Components -->
    <WhyLocation />
    <WhatsIncluded />
    <TourTypes />
    <FAQSection />

    <!-- Final CTA Section -->
    <section class="py-24 bg-gradient-to-br from-primary to-blue-700 text-white relative overflow-hidden">
        <div class="absolute inset-0 bg-[url('https://www.transparenttextures.com/patterns/cubes.png')] opacity-10"></div>
        <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8 text-center relative z-10">
            <h2 class="text-4xl md:text-5xl font-heading font-extrabold mb-6">Ready for Your Galapagos Adventure?</h2>
            <p class="text-xl mb-12 opacity-90 font-medium">Join 1,200+ happy travelers who've experienced the trip of a lifetime</p>
            
            <div class="flex flex-col sm:flex-row justify-center gap-6 mb-16">
                <a href="/#book" class="inline-flex items-center justify-center px-8 py-4 bg-white text-primary rounded-xl font-bold text-lg hover:bg-blue-50 transition shadow-xl hover:-translate-y-1">
                    <CalendarCheck className="w-5 h-5 mr-2" /> Book Your Tour Now
                </a>
                <a href="/#contact" class="inline-flex items-center justify-center px-8 py-4 bg-transparent border-2 border-white/30 text-white rounded-xl font-bold text-lg hover:bg-white/10 transition hover:-translate-y-1">
                    <MessageSquare className="w-5 h-5 mr-2" /> Chat With an Expert
                </a>
            </div>

            <div class="grid grid-cols-3 gap-8 max-w-2xl mx-auto border-t border-white/20 pt-12">
                <div>
                    <p class="text-4xl font-extrabold mb-2 flex justify-center items-center gap-2">4.9 <Star className="w-6 h-6 fill-current text-yellow-400" /></p>
                    <p class="text-sm opacity-75 font-semibold uppercase tracking-wider">Average Rating</p>
                </div>
                <div>
                    <p class="text-4xl font-extrabold mb-2">1,200+</p>
                    <p class="text-sm opacity-75 font-semibold uppercase tracking-wider">Happy Travelers</p>
                </div>
                <div>
                    <p class="text-4xl font-extrabold mb-2">20+</p>
                    <p class="text-sm opacity-75 font-semibold uppercase tracking-wider">Years Experience</p>
                </div>
            </div>
        </div>
    </section>

  </main>

  <Footer />
</BaseLayout>
