---
import Button from './Button.astro';
---

<section id="contact" class="py-24 bg-white">
  <div class="container mx-auto px-4">
    <div class="bg-gradient-to-r from-primary-50 to-secondary-50 p-8 md:p-12 rounded-3xl overflow-hidden relative">
      <div class="grid md:grid-cols-2 gap-12 items-center relative z-10">
        <div>
          <span class="text-primary-600 font-semibold tracking-wide uppercase text-sm mb-2 block">Get in Touch</span>
          <h2 class="text-3xl md:text-5xl font-bold font-heading mb-6 text-slate-900">Ready to start your adventure?</h2>
          <p class="text-lg text-slate-600 mb-8">
            Have questions about our tours? Our team is available 24/7 to help you plan the perfect experience.
          </p>
          
          <div class="flex flex-col sm:flex-row gap-4">
             <Button variant="primary" size="lg" href="https://wa.me/50612345678">
               <span class="flex items-center gap-2">
                 <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="currentColor" class="w-5 h-5">
                   <path d="M12.04 2c-5.46 0-9.91 4.45-9.91 9.91 0 1.75.46 3.45 1.32 4.95L2.05 22l5.25-1.38c1.45.79 3.08 1.21 4.74 1.21 5.46 0 9.91-4.45 9.91-9.91 0-2.65-1.03-5.14-2.9-7.01A9.816 9.816 0 0 0 12.04 2z"/>
                 </svg>
                 WhatsApp Us
               </span>
             </Button>
             <Button variant="outline" size="lg" href="mailto:hello@firecow.com">
               Send Email
             </Button>
          </div>
        </div>
        
        <div class="grid grid-cols-2 gap-6">
          <div class="bg-white p-6 rounded-2xl shadow-sm">
             <div class="w-12 h-12 bg-primary-100 text-primary-600 rounded-full flex items-center justify-center mb-4">
               <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                 <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 6.75c0 8.284 6.716 15 15 15h2.25a2.25 2.25 0 0 0 2.25-2.25v-1.372c0-.516-.351-.966-.852-1.091l-4.423-1.106c-.44-.11-.902.055-1.173.417l-.97 1.293c-.282.376-.769.542-1.21.38a12.035 12.035 0 0 1-7.143-7.143c-.162-.441.004-.928.38-1.21l1.293-.97c.363-.271.527-.734.417-1.173L6.963 3.102a1.125 1.125 0 0 0-1.091-.852H4.5A2.25 2.25 0 0 0 2.25 4.5v2.25Z" />
               </svg>
             </div>
             <h3 class="font-bold text-lg mb-1">Phone</h3>
             <p class="text-slate-600 text-sm">+506 1234 5678</p>
          </div>
          
          <div class="bg-white p-6 rounded-2xl shadow-sm">
             <div class="w-12 h-12 bg-secondary-100 text-secondary-600 rounded-full flex items-center justify-center mb-4">
                <svg xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24" stroke-width="1.5" stroke="currentColor" class="w-6 h-6">
                 <path stroke-linecap="round" stroke-linejoin="round" d="M15 10.5a3 3 0 1 1-6 0 3 3 0 0 1 6 0Z" />
                 <path stroke-linecap="round" stroke-linejoin="round" d="M19.5 10.5c0 7.142-7.5 11.25-7.5 11.25S4.5 17.642 4.5 10.5a7.5 7.5 0 1 1 15 0Z" />
               </svg>
             </div>
             <h3 class="font-bold text-lg mb-1">Office</h3>
             <p class="text-slate-600 text-sm">Guanacaste, CR</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
