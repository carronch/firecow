const experiences = [
  {
    id: 'snorkeling',
    title: 'Volcanic Reef Snorkeling',
    category: 'Adventure',
    image: 'https://images.unsplash.com/photo-1544551763-46a013bb70d5?w=800&q=80',
    duration: '45 mins',
    groupSize: 'Guided Groups',
    price: 'Included',
    description: 'Explore the vibrant underwater world of the volcanic reef surrounding Tortuga Island. Spot angelfish, porcupine fish, and more in crystal clear warm waters.',
    features: ['Equipment Included', 'Guided Tour', 'Beginner Friendly']
  },
  {
    id: 'eco-hike',
    title: 'Eco-Trail Nature Hike',
    category: 'Nature',
    image: 'https://images.unsplash.com/photo-1586348943529-bea7ca28d7fb?w=800&q=80', // Jungle trail image
    duration: '30 mins',
    groupSize: 'Guided Groups',
    price: 'Included',
    description: 'Take a guided walk through the uninhabited island trails. Discover the native flora and fauna of this protected nature reserve.',
    features: ['Wildlife Spotting', 'Scenic Views', 'Easy Terrain']
  },
  {
    id: 'banana-boat',
    title: 'Banana Boat Thrill',
    category: 'Fun',
    image: 'https://images.unsplash.com/photo-1621262828626-4b8cc4821867?w=800&q=80', // Water splash/fun image
    duration: '15 mins',
    groupSize: 'Small Groups',
    price: 'Included',
    description: 'Hold on tight for a fun and thrilling ride along the coast of the beach. A favorite activity for families and friends.',
    features: ['High Speed', 'Safety Gear', 'Unlimited Rides']
  }
