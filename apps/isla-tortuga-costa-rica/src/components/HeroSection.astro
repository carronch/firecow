<section id="hero-booking" class="relative min-h-screen flex items-center pt-20 bg-cover bg-center bg-no-repeat bg-fixed" style="background-image: linear-gradient(rgba(0, 0, 0, 0.3), rgba(0, 0, 0, 0.5)), url('https://images.unsplash.com/photo-1590523741831-ab7e8b8f9c7f?auth=1737064971&auto=format&fit=crop&ixlib=rb-4.0.3&q=80&w=2698&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D');">
  <div class="container mx-auto px-4 grid grid-cols-1 lg:grid-cols-2 gap-12 items-center w-full py-12">
      
      <!-- Left: Text -->
      <div class="text-white text-center lg:text-left">
          <div class="inline-block bg-primary-500 px-4 py-1 rounded-full text-sm font-bold tracking-wide uppercase mb-6 shadow-lg">
              Costa Cat Cruises
          </div>
          <h1 class="text-4xl md:text-6xl font-extrabold mb-6 leading-tight drop-shadow-xl font-heading">
              Tortuga Island: A Unique Paradise
          </h1>
          <p class="text-lg md:text-xl mb-8 font-light drop-shadow-md text-gray-100 max-w-2xl mx-auto lg:mx-0">
              Experience nature and adventure to the fullest on our world-class catamaran. Snorkel, hike, and relax in luxury.
          </p>
          
          <div class="flex flex-col sm:flex-row gap-4 justify-center lg:justify-start">
              <a href="#experiences" class="bg-white hover:bg-gray-100 text-slate-900 text-lg font-bold py-3 px-8 rounded-lg shadow-xl transition transform hover:-translate-y-1 flex items-center justify-center">
                  <i class="fa-solid fa-eye mr-2"></i> View Tour Details
              </a>
          </div>
          
          <div class="mt-8 flex items-center justify-center lg:justify-start space-x-6 text-sm font-medium text-gray-300">
              <span class="flex items-center"><i class="fa-solid fa-check-circle text-green-400 mr-2"></i> All-Inclusive</span>
              <span class="flex items-center"><i class="fa-solid fa-shield-halved text-blue-400 mr-2"></i> Best Price Guarantee</span>
          </div>
      </div>

      <!-- Right: Booking Form Placeholder -->
      <div class="bg-white rounded-2xl shadow-2xl overflow-hidden border-4 border-white/20 backdrop-blur-sm h-[600px] relative">
          <div class="p-8 h-full flex flex-col justify-center items-center text-center">
             <div class="w-20 h-20 bg-primary-50 rounded-full flex items-center justify-center mb-6">
                <i class="fa-solid fa-calendar-days text-4xl text-primary-500"></i>
             </div>
             <h3 class="text-2xl font-bold text-slate-900 mb-2">Book Your Adventure</h3>
             <p class="text-slate-500 mb-8">Select your dates to check availability.</p>
             
             <!-- Visual representation of the booking widget -->
             <div class="w-full max-w-sm space-y-4 opacity-75">
                <div class="h-12 bg-slate-100 rounded-lg w-full"></div>
                <div class="h-12 bg-slate-100 rounded-lg w-full"></div>
                <div class="h-12 bg-primary-100 rounded-lg w-full"></div>
             </div>

             <div class="absolute bottom-8 text-xs text-slate-400">
                Powered by <span class="font-semibold">FireCow Booking Engine</span>
             </div>
          </div>
      </div>
  </div>
</section>
