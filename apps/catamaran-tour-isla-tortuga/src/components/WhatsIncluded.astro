---
import {
  Utensils,
  LifeBuoy,
  Users,
  Bed,
  Waves,
  Camera,
  Ship,
  Fish,
  Mountain,
  Sun,
  Binoculars,
  GraduationCap,
  Clock,
  Plane,
  Wifi,
  ShieldCheck,
  Ban,
  Check
} from 'lucide-react';

const topFeatures = [
  {
    icon: Utensils,
    title: "Food & Drinks",
    items: ["Light breakfast onboard", "Full Buffet Lunch on Island", "Rum Punch & Margaritas", "Soft drinks & Water"]
  },
  {
    icon: LifeBuoy,
    title: "Water Activities",
    items: ["Snorkeling tour included", "Banana Boat ride included", "Beach chairs & umbrellas", "Beach toys for kids"]
  },
  {
    icon: Users,
    title: "Great Service",
    items: ["Bilingual Crew (En/Sp)", "Safety briefing included", "Music & Entertainment", "Family friendly atmosphere"]
  },
  {
    icon: Ship,
    title: "The Catamaran",
    items: ["Stable twin-hull design", "Shaded deck areas", "Sunbathing nets", "Clean restrooms onboard"]
  }
];

const dailyActivities = [
  { icon: Ship, text: "Scenic Cruise" },
  { icon: Fish, text: "Snorkeling (Gear inc.)" },
  { icon: Waves, text: "Banana Boat Ride" },
  { icon: Mountain, text: "Eco-Trail Hike" },
  { icon: Sun, text: "Beach Relaxation" },
  { icon: Camera, text: "Scenic Photo Ops" },
  { icon: Wifi, text: "WiFi at Marina" }, 
  { icon: Check, text: "Top Safety Standards" }
];

const schedule = [
  { time: "7:15 AM", title: "Check-in", desc: "Los Sueños Marina" },
  { time: "7:45 AM", title: "Departure", desc: "Cruise to Isla Tortuga" },
  { time: "8:30 AM", title: "Arrival & Snorkeling", desc: "Enjoy the reef & fish" },
  { time: "10:00 AM", title: "Beach Time", desc: "Banana boat or Hike" },
  { time: "12:30 PM", title: "BBQ Lunch", desc: "Buffet served on island" },
  { time: "3:45 PM", title: "Return", desc: "Back at Los Sueños" }
];

const alsoIncluded = [
  { icon: Check, title: "Port Fees", desc: "Included" },
  { icon: Check, title: "Equipment", desc: "Masks & Fins" },
  { icon: Check, title: "Insurance", desc: "Full Coverage" },
  { icon: Ban, title: "Alcohol", desc: "Included (21+)" }
];
---

<section class="py-16 bg-blue-50/50">
  <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
    
    <!-- Top Row: 4 Cards -->
    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 mb-8">
      {topFeatures.map((feature) => (
        <div class="bg-white p-6 rounded-xl shadow-sm border border-gray-100/50 hover:shadow-md transition-shadow">
          <div class="w-12 h-12 bg-blue-100 rounded-full flex items-center justify-center mb-4 text-primary">
            <feature.icon className="w-6 h-6" />
          </div>
          <h3 class="text-lg font-bold text-gray-900 mb-4">{feature.title}</h3>
          <ul class="space-y-3">
            {feature.items.map((item) => (
              <li class="flex items-start gap-2.5">
                <Check className="w-4 h-4 text-green-500 mt-1 flex-shrink-0" />
                <span class="text-sm text-gray-600 leading-relaxed">{item}</span>
              </li>
            ))}
          </ul>
        </div>
      ))}
    </div>

    <!-- Middle Row: Daily Activities + Schedule -->
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-6 mb-8">
      
      <!-- Daily Activities -->
      <div class="bg-white p-8 rounded-xl shadow-sm border border-gray-100/50">
        <div class="flex items-center gap-3 mb-6">
          <div class="p-2 bg-blue-100 text-primary rounded-lg">
             <Waves className="w-6 h-6" /> 
             {/* Using Waves as generic icon for activities or maybe List? Screen shows List icon. 
                 Let's use List or LayoutList. Wait, I imported specific icons. 
                 I'll just use a generic one like Map or List. 
                 Let's add List to imports if needed, or just use Waves. 
                 Actually screenshot has 'Daily Activities' header with an icon that looks like a list. 
             */}
          </div>
          <h3 class="text-xl font-bold text-gray-900">Daily Activities</h3>
        </div>
        
        <div class="grid grid-cols-1 sm:grid-cols-2 gap-y-6 gap-x-4">
          {dailyActivities.map((activity) => (
            <div class="flex items-center gap-3">
              <activity.icon className="w-5 h-5 text-primary" />
              <span class="text-gray-600 font-medium">{activity.text}</span>
            </div>
          ))}
        </div>
      </div>

      <!-- Typical Day Schedule -->
      <div class="bg-primary p-8 rounded-xl shadow-sm text-white relative overflow-hidden">
        {/* Background decoration or gradient could go here */}
        <div class="flex items-center gap-3 mb-8 relative z-10">
          <Clock className="w-6 h-6 text-blue-200" />
          <h3 class="text-xl font-bold">Typical Day Schedule</h3>
        </div>

        <div class="space-y-6 relative z-10">
          {schedule.map((slot) => (
            <div class="flex gap-4 items-start group">
              <div class="w-20 pt-1 flex-shrink-0">
                <span class="px-2 py-1 bg-white/20 rounded text-xs font-semibold text-blue-50 block text-center backdrop-blur-sm">
                  {slot.time}
                </span>
              </div>
              <div class="pb-6 border-b border-white/10 last:border-0 last:pb-0 flex-grow">
                <h4 class="font-bold text-white mb-1 group-hover:text-blue-100 transition-colors">{slot.title}</h4>
                <p class="text-sm text-blue-100/90">{slot.desc}</p>
              </div>
            </div>
          ))}
        </div>
      </div>

    </div>

    <!-- Bottom Row: Also Included -->
    <div class="bg-white p-8 rounded-xl shadow-sm border border-gray-100/50 text-center">
      <h3 class="text-xl font-bold text-gray-900 mb-8">Also Included</h3>
      <div class="grid grid-cols-2 md:grid-cols-4 gap-8">
        {alsoIncluded.map((item) => (
          <div class="flex flex-col items-center">
            <div class="w-10 h-10 rounded-full bg-blue-50 flex items-center justify-center text-primary mb-3">
              <item.icon className="w-5 h-5" />
            </div>
            <h4 class="font-bold text-gray-900 mb-1">{item.title}</h4>
            <p class="text-xs text-gray-500 uppercase tracking-wide">{item.desc}</p>
          </div>
        ))}
      </div>
    </div>

  </div>
</section>
