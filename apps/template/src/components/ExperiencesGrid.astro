---
import Button from './Button.astro';
import OptimizedImage from './common/OptimizedImage.astro';

// Placeholder data - will eventually come from Keystatic
const tours = [
  {
    id: 1,
    title: "Island Paradise Cruise",
    price: 3245,
    duration: "5-9 Days",
    image: "https://images.unsplash.com/photo-1544551763-46a013bb70d5?w=800&q=80",
    category: "Luxury",
    description: "A luxury yacht customized to carry 16 guests in comfort and safety through the Galapagos Islands."
  },
  {
    id: 2,
    title: "Coral Reef Adventure",
    price: 1881,
    duration: "4-8 Days",
    image: "https://images.unsplash.com/photo-1559827260-dc66d52bef19?w=800&q=80",
    category: "Classic",
    description: "The Coral I and Coral II offer the perfect combination of classic beauty and exquisite style."
  },
  {
    id: 3,
    title: "Hermès Mega Catamaran",
    price: 6195,
    duration: "4-9 Days",
    image: "https://images.unsplash.com/photo-1569263979104-865ab7cd8d13?w=800&q=80",
    category: "Ultra Luxury",
    description: "Experience the ultimate luxury and comfort on the Hermès Mega Catamaran."
  }
];
---

<section id="experiences" class="py-20 bg-gray-50" aria-label="Available Tours">
  <div class="container mx-auto px-4">
    <div class="text-center mb-16">
      <span class="text-blue-700 font-bold tracking-wide uppercase text-sm">Discover Paradise</span>
      <h2 class="text-4xl md:text-5xl font-bold font-heading mt-2 mb-4 text-gray-900">Unforgettable Experiences</h2>
      <p class="text-gray-700 text-lg max-w-2xl mx-auto">Choose from our curated selection of premium tours designed to create lasting memories.</p>
    </div>


    <div id="experiences-grid" class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
      {/* Fallback Content (Static) */}
      {tours.map(tour => (
        <div class="tour-card-fallback group bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1 border border-gray-100">
          <div class="relative h-64 overflow-hidden">
             <div class="absolute top-4 left-4 z-10 bg-white/95 backdrop-blur-sm px-3 py-1 rounded-full text-xs font-bold uppercase tracking-wider text-gray-900 shadow-sm">
               {tour.category}
             </div>
             <OptimizedImage 
               src={tour.image} 
               alt={`${tour.title} - ${tour.category} Tour`}
               width={800}
               height={600}
               class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
             />
          </div>
          
          <div class="p-8">
            <div class="flex justify-between items-start mb-4">
              <div>
                <h3 class="text-xl font-bold font-heading text-gray-900 mb-2 group-hover:text-blue-700 transition-colors">{tour.title}</h3>
                <div class="flex items-center text-gray-600 text-sm">
                  <i class="fa-regular fa-clock mr-2 text-gray-500" aria-hidden="true"></i>
                  {tour.duration}
                </div>
              </div>
            </div>

            <p class="text-gray-700 mb-6 text-sm line-clamp-2 leading-relaxed">{tour.description}</p>

            <div class="flex items-center justify-between mt-6 pt-6 border-t border-gray-100">
              <div>
                <span class="text-gray-600 text-sm font-medium">From</span>
                <p class="text-2xl font-bold text-blue-700">${tour.price}</p>
              </div>
              <Button href={`/tours/${tour.id}`} aria-label={`View details for ${tour.title}`}>
                View Details
              </Button>
            </div>
          </div>
        </div>
      ))}
    </div>
  </div>
</section>

<script>
  async function loadZohoTours() {
    const grid = document.getElementById('experiences-grid');
    if (!grid) return;

    try {
      const response = await fetch('/api/tours');
      // If API responds with error or is not configured (503), keep fallbacks
      if (!response.ok) {
        console.warn('Zoho API unavailable, using static content.');
        return;
      }

      const data = await response.json();
      if (!data.success || !data.tours || data.tours.length === 0) {
        return;
      }

      // Success: Replace content
      const tours = data.tours;
      
      const tourHtml = tours.map(tour => `
        <div class="group bg-white rounded-2xl overflow-hidden shadow-lg hover:shadow-xl transition-all duration-300 hover:-translate-y-1 border border-gray-100">
          <div class="relative h-64 overflow-hidden">
             <div class="absolute top-4 left-4 z-10 bg-white/95 backdrop-blur-sm px-3 py-1 rounded-full text-xs font-bold uppercase tracking-wider text-gray-900 shadow-sm">
               ${tour.category || 'Tour'}
             </div>
             <img 
               src="${tour.image}" 
               alt="${tour.name}"
               width="800"
               height="600"
               class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-110"
               loading="lazy"
             />
          </div>
          
          <div class="p-8">
            <div class="flex justify-between items-start mb-4">
              <div>
                <h3 class="text-xl font-bold font-heading text-gray-900 mb-2 group-hover:text-blue-700 transition-colors">${tour.name}</h3>
                <div class="flex items-center text-gray-600 text-sm">
                  <i class="fa-regular fa-clock mr-2 text-gray-500" aria-hidden="true"></i>
                   ${tour.duration}
                </div>
              </div>
            </div>

            <p class="text-gray-700 mb-6 text-sm line-clamp-2 leading-relaxed">${tour.description}</p>

            <div class="flex items-center justify-between mt-6 pt-6 border-t border-gray-100">
              <div>
                <span class="text-gray-600 text-sm font-medium">From</span>
                <p class="text-2xl font-bold text-blue-700">$${tour.price}</p>
              </div>
              <a href="/tours/${tour.serviceId}" class="inline-flex items-center justify-center px-6 py-3 border border-transparent text-base font-medium rounded-lg text-white bg-blue-600 hover:bg-blue-700 transition-colors duration-300 shadow-lg shadow-blue-500/30">
                View Details
              </a>
            </div>
          </div>
        </div>
      `).join('');

      grid.innerHTML = tourHtml;

    } catch (err) {
      console.error('Failed to load Zoho tours:', err);
    }
  }

  // Load on mount
  loadZohoTours();
</script>
